<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/restaurants_grid_item_linear_layout"
    android:background="@drawable/customborder"
    android:layout_marginTop="32dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"

    >

    <ImageView
        android:id="@+id/restaurants_grid_item_image_view"
        android:padding="8dp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_border_white"
        />

    <TextView
        android:id="@+id/restaurants_grid_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restorancic"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"

        />

</LinearLayout>