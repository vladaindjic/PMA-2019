<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/customborder"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/dish_comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:text="Komentar"
        android:background="@color/transparent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:background="@color/transparent"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/transparent"

            >

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"
                android:background="@drawable/ic_like"
                android:id="@+id/dish_comment_vote_positive"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="1"
                android:background="@color/transparent"
                android:id="@+id/dish_comment_positive_vote_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/transparent"

            >

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="2dp"

                android:background="@drawable/ic_dislike"
                android:id="@+id/dish_comment_vote_negative"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12sp"
                android:id="@+id/dish_comment_negative_vote_text"
                android:background="@color/transparent"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>