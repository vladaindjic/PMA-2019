<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dish_type_list_item_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/customborder"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_dish"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
         />

    <TextView
        android:id="@+id/txt_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mesiste"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxWidth="178dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/txt_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="10000"
        android:maxWidth="90dp"/>

    <!--FIXME vi3: Vidi da promenis Max Width ako bude trebalo zbog landscape-a-->

</RelativeLayout>