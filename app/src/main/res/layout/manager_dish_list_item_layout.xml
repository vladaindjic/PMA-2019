<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/manager_dish_type_list_item_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/manager_remove_dish_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_remove_circle_red_24dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/manager_img_dish"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_bg"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/manager_txt_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mesiste"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxWidth="178dp"
            android:layout_centerInParent="true"
            android:background="@color/transparent"

            />

        <TextView
            android:id="@+id/manager_txt_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="10000"
            android:maxWidth="90dp"
            android:background="@color/transparent"

            />

        <!--FIXME vi3: Vidi da promenis Max Width ako bude trebalo zbog landscape-a-->

    </RelativeLayout>
</LinearLayout>
