<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cook_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dish_border_light"
    android:orientation="horizontal"
    android:layout_margin="8dp">


    <ImageView
        android:id="@+id/cook_item_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/cook_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:maxWidth="178dp"
        android:text="Mesiste"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/transparent"

        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <TextView
        android:id="@+id/cook_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:maxWidth="90dp"
        android:text="10000"
        android:textAlignment="center"
        android:background="@color/transparent"

        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <ImageButton
        android:id="@+id/cook_item_delete_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginEnd="3dp"
        android:background="@drawable/roundedbutton"
        app:srcCompat="@drawable/ic_delete_black"
        />

</LinearLayout>