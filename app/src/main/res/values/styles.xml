<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/lightcolor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Tab Rating -->
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyleLight</item>

        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black</item>


        <item name="promotion_border">@drawable/promotion_border_light</item>
        <item name="meal_border">@drawable/meal_border_light</item>
        <item name="dish_type_border">@drawable/dish_type_border_light</item>
        <item name="dish_border">@drawable/dish_border_light</item>
        <item name="comment_box">@drawable/new_comment_box_border</item>
        <item name="comment_border">@drawable/comment_border_light</item>
        <item name="search_icon">@drawable/ic_search_black</item>
        <item name="filter_icon">@drawable/ic_filter_list_black</item>
        <item name="back_icon">@drawable/ic_arrow_back_black</item>
        <item name="subscribe_icon">@drawable/ic_rss_symbol</item>
        <item name="button_text">@color/black_effective</item>
        <item name="nav_drawer_color_text">@color/black_effective</item>
        <item name="filter_text_color">@color/black_effective</item>
        <item name="notification_icon">@drawable/ic_notifications_black</item>
        <item name="navigation_header">@drawable/bg_design_orange</item>

        <!--Mora zbog preferences da se doda-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/blue_black_dark</item>
        <item name="actionBarItemBackground">@color/yellow</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/blue_black_dark</item>
        <item name="colorPrimaryDark">@color/blue_black_dark</item>
        <item name="colorAccent">@color/blue_grey_light</item>
        <item name="android:textColorPrimary">@color/blue_grey_light</item>
        <item name="android:textColor">@color/blue_grey_light</item>
        <item name="android:windowBackground">@color/blue_black_dark</item>
        <item name="android:textColorHighlight">@color/blue_grey_light</item>
        <item name="android:textColorAlertDialogListItem">@color/blue_grey_light</item>
        <item name="android:textColorLink">@color/blue_grey_light</item>
        <item name="android:textColorSecondary">@color/blue_grey_light</item>
        <item name="android:textColorTertiary">@color/blue_grey_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyleDark</item>
        <item name="promotion_border">@drawable/promotion_border_dark</item>
        <item name="meal_border">@drawable/meal_border_dark</item>
        <item name="dish_type_border">@drawable/dish_type_border_dark</item>
        <item name="dish_border">@drawable/dish_border_dark</item>
        <item name="back_icon">@drawable/ic_arrow_back_white_24px</item>
        <item name="subscribe_icon">@drawable/ic_rss_feed_white</item>
        <item name="comment_box">@drawable/new_comment_box_border</item>
        <item name="comment_border">@drawable/comment_border_dark</item>
        <item name="search_icon">@drawable/ic_search</item>
        <item name="filter_icon">@drawable/ic_filter</item>
        <item name="button_text">@color/black</item>
        <item name="nav_drawer_color_text">@color/blue_grey_light</item>
        <item name="filter_text_color">@color/blue_grey_light</item>
        <item name="notification_icon">@drawable/ic_notifications_white</item>
        <item name="notification_border">@drawable/notification_border_light</item>
        <item name="navigation_header">@drawable/header_dark</item>
        <!--Mora zbog preferences da se doda-->
        <item name="preferenceTheme">@style/ThemeOverlay.AppCompat.Dark</item>

    </style>

    <style name="DrawerArrowStyleDark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyleLight" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>


    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Light.ttf</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Italic.ttf</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Italic</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/orangecolor</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orangecolor</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearence.App.TextInputLayoutShadow" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/shadow</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="android:textColorHighlight">@color/transparent</item>
        <item name="android:textColorLink">@color/transparent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="Button.Action.Positive" parent="Button">
        <item name="android:textColor">@drawable/button_positive_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Action.Negative" parent="Button">
        <item name="android:textColor">@drawable/button_negative_text_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTab" parent="Widget.Design.TabLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabTextAppearance">@style/AppTab.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.Primary.Quiz.Empty" parent="Button.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>


    <!--Atributi potrebno za bordere iz drawable foldera-->
    <attr name="promotion_border" format="reference" />
    <attr name="meal_border" format="reference" />
    <attr name="dish_type_border" format="reference" />
    <attr name="dish_border" format="reference" />
    <attr name="comment_box" format="reference"/>
    <attr name="comment_border" format="reference"/>
    <attr name="search_icon" format="reference"/>
    <attr name="filter_icon" format="reference"/>
    <attr name="back_icon" format="reference"/>
    <attr name="subscribe_icon" format="reference"/>
    <attr name="button_text" format="reference"/>
    <attr name="nav_drawer_color_text" format="reference"/>
    <attr name="filter_text_color" format="reference"/>
    <attr name="notification_icon" format="reference"/>
    <attr name="notification_border" format="reference"/>
    <attr name="navigation_header" format="reference"/>

</resources>
